<UserControl x:Class="StructuralDesignStudio.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             Background="#252526">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  Padding="30,25">
        <StackPanel>

            <!-- HEADER SECTION -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Project Overview"
                               FontSize="28"
                               FontWeight="Light"
                               Foreground="#F1F1F1"/>
                    <TextBlock Text="Structural analysis and volume distribution"
                               FontSize="13"
                               Foreground="#999999"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- FLOOR SELECTOR -->
                <Border Grid.Column="1"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Floor Level:"
                                   VerticalAlignment="Center"
                                   Foreground="#CCCCCC"
                                   FontSize="13"
                                   Margin="0,0,10,0"/>
                        <TextBox Text="{Binding SelectedFloor, UpdateSourceTrigger=PropertyChanged}"
                                 Width="60"
                                 Style="{StaticResource ModernTextBox}"
                                 HorizontalContentAlignment="Center"/>
                        <Button Content="Refresh"
                                Command="{Binding LoadStatisticsCommand}"
                                Style="{StaticResource ActionButton}"
                                Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- PROJECT PREVIEW IMAGE -->
            <Border Height="280"
                    Margin="0,0,0,25"
                    Background="#1E1E1E"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Image Source="C:\Users\Monster\Desktop\Github\StructuralDesignStudio\StructuralDesignStudio.UI\Resources\ProjectView.png"
                           Stretch="Uniform"
                           Margin="20"/>
                    <Border Background="#007ACC"
                            CornerRadius="3"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="15">
                        <TextBlock Text="REVİT REPRESENTATIVE MODEL"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>
                </Grid>
            </Border>

            <!-- STATISTICS CARDS -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- COLUMNS CARD -->
                <Border Grid.Column="0"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="20"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="🏛 COLUMNS"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#888888"/>
                        <TextBlock Text="{Binding ColumnStats.TotalCount}"
                                   FontSize="32"
                                   FontWeight="Light"
                                   Foreground="#F1F1F1"
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="Total Elements"
                                   FontSize="12"
                                   Foreground="#999999"/>
                        <TextBlock Text="{Binding ColumnStats.TotalVolume, StringFormat={}{0:F2} m³}"
                                   FontSize="13"
                                   Foreground="#007ACC"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- BEAMS CARD -->
                <Border Grid.Column="1"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="20"
                        Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="━━ BEAMS"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#888888"/>
                        <TextBlock Text="{Binding BeamStats.TotalLength, StringFormat={}{0:F1} m}"
                                   FontSize="32"
                                   FontWeight="Light"
                                   Foreground="#F1F1F1"
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="Total Length"
                                   FontSize="12"
                                   Foreground="#999999"/>
                        <TextBlock Text="{Binding BeamStats.TotalVolume, StringFormat={}{0:F2} m³}"
                                   FontSize="13"
                                   Foreground="#007ACC"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- SLABS CARD -->
                <Border Grid.Column="2"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="20"
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="▭ SLABS"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#888888"/>
                        <TextBlock Text="{Binding SlabStats.TotalArea, StringFormat={}{0:F1} m²}"
                                   FontSize="32"
                                   FontWeight="Light"
                                   Foreground="#F1F1F1"
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="Total Area"
                                   FontSize="12"
                                   Foreground="#999999"/>
                        <TextBlock Text="{Binding SlabStats.TotalVolume, StringFormat={}{0:F2} m³}"
                                   FontSize="13"
                                   Foreground="#007ACC"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- CHART SECTION -->
            <GroupBox Header="VOLUME DISTRIBUTION ANALYSIS"
                      Style="{StaticResource ModernGroupBox}">
                <oxy:PlotView Height="350"
                              Model="{Binding StructuralDistributionChart}"
                              Background="Transparent"/>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>

</UserControl>