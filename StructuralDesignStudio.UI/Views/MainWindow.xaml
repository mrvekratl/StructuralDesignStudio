<Window x:Class="StructuralDesignStudio.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StructuralDesignStudio.UI.ViewModels"
        xmlns:views="clr-namespace:StructuralDesignStudio.UI.Views"
        Title="Structural Design Studio"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ColumnViewModel}">
            <views:ColumnView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BeamViewModel}">
            <views:BeamView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SlabViewModel}">
            <views:SlabView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MaterialViewModel}">
            <views:MaterialView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SOL MENÜ (REVIT STYLE SIDEBAR) -->
        <Border Grid.Column="0" 
                Background="#2D2D30"
                BorderBrush="#3F3F46"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Border Grid.Row="0" 
                        Background="#1E1E1E"
                        Padding="15"
                        BorderBrush="#3F3F46"
                        BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="⬡ STRUCTURAL"
                                   Foreground="#007ACC"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Design Studio"
                                   Foreground="#CCCCCC"
                                   FontSize="14"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- NAVIGATION BUTTONS -->
                <StackPanel Grid.Row="1" Margin="10,15,10,10">
                    <TextBlock Text="ELEMENTS"
                               Foreground="#888888"
                               FontSize="11"
                               FontWeight="Bold"
                               Margin="10,0,0,8"/>

                    <Button Content="📊 Dashboard"
                            Command="{Binding OpenDashboardCommand}"
                            Style="{StaticResource NavButtonStyle}"/>

                    <Button Content="🏛 Columns"
                            Command="{Binding OpenColumnsCommand}"
                            Style="{StaticResource NavButtonStyle}"/>

                    <Button Content="━━ Beams"
                            Command="{Binding OpenBeamsCommand}"
                            Style="{StaticResource NavButtonStyle}"/>

                    <Button Content="▭ Slabs"
                            Command="{Binding OpenSlabsCommand}"
                            Style="{StaticResource NavButtonStyle}"/>

                    <Separator Background="#3F3F46" 
                               Margin="10,15"
                               Height="1"/>

                    <TextBlock Text="PROPERTIES"
                               Foreground="#888888"
                               FontSize="11"
                               FontWeight="Bold"
                               Margin="10,0,0,8"/>

                    <Button Content="🔧 Materials"
                            Command="{Binding OpenMaterialsCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>

                <!-- FOOTER INFO -->
                <Border Grid.Row="2"
                        Background="#1E1E1E"
                        Padding="15,10"
                        BorderBrush="#3F3F46"
                        BorderThickness="0,1,0,0">
                    <TextBlock Text="v1.0.0 | Ready"
                               Foreground="#666666"
                               FontSize="10"
                               HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- SAĞ ANA İÇERİK ALANI -->
        <Border Grid.Column="1" 
                Background="#252526">
            <ContentControl Content="{Binding CurrentViewModel}"
                          Margin="0"/>
        </Border>

    </Grid>
</Window>