<UserControl x:Class="StructuralDesignStudio.UI.Views.ColumnView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#252526">

    <Grid Margin="30,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🏛 Columns"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="#F1F1F1"/>
            <TextBlock Text="Manage vertical structural elements"
                       FontSize="13"
                       Foreground="#999999"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SOL: COLUMN LIST -->
            <Border Grid.Column="0"
                    Background="#2D2D30"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#1E1E1E"
                            BorderBrush="#3F3F46"
                            BorderThickness="0,0,0,1"
                            Padding="15,12">
                        <TextBlock Text="COLUMN LIST"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#888888"/>
                    </Border>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Columns}"
                              SelectedItem="{Binding SelectedColumn}"
                              AutoGenerateColumns="False"
                              Background="#2D2D30"
                              Foreground="#F1F1F1"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#3F3F46"
                              RowBackground="#2D2D30"
                              AlternatingRowBackground="#252526"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#007ACC"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Floor" Binding="{Binding FloorLevel}" Width="60"/>
                            <DataGridTextColumn Header="Width" Binding="{Binding Width, StringFormat={}{0:F2}}" Width="70"/>
                            <DataGridTextColumn Header="Depth" Binding="{Binding Depth, StringFormat={}{0:F2}}" Width="70"/>
                            <DataGridTextColumn Header="Height" Binding="{Binding Height, StringFormat={}{0:F2}}" Width="70"/>
                            <DataGridTextColumn Header="Volume" Binding="{Binding Volume, StringFormat={}{0:F2} m³}" Width="90"/>
                            <DataGridTextColumn Header="Weight" Binding="{Binding Weight, StringFormat={}{0:F0} kg}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- SAĞ: PROPERTIES & 3D PREVIEW -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- PROPERTIES PANEL -->
                <Border Grid.Row="0"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="PROPERTIES"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#888888"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Floor Level"
                                       Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,15,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding FloorLevel}"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Width (m)"
                                       Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,15,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding Width}"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Depth (m)"
                                       Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,15,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Text="{Binding Depth}"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Height (m)"
                                       Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1"
                                     Text="{Binding Height}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </Grid>

                        <UniformGrid Columns="3" Margin="0,20,0,0">
                            <Button Content="Add"
                                    Command="{Binding AddColumnCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Margin="0,0,5,0"/>
                            <Button Content="Update"
                                    Command="{Binding UpdateColumnCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Margin="2.5,0"/>
                            <Button Content="Delete"
                                    Command="{Binding DeleteColumnCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Margin="5,0,0,0"
                                    Background="#C42B1C"/>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- 3D PREVIEW -->
                <Border Grid.Row="1"
        Background="#1E1E1E"
        BorderBrush="#3F3F46"
        BorderThickness="1"
        CornerRadius="6">
                    <Grid>
                        <Border Background="#007ACC"
                CornerRadius="3"
                Padding="8,4"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="15"
                Panel.ZIndex="1">
                            <TextBlock Text="3D PREVIEW"
                       FontSize="9"
                       FontWeight="Bold"
                       Foreground="White"/>
                        </Border>

                        <Viewport3D ClipToBounds="True">
                            <Viewport3D.Camera>
                                <PerspectiveCamera Position="4, -5, 4"
                                   LookDirection="-1, 1.2, -1"
                                   UpDirection="0, 0, 1"
                                   FieldOfView="45"/>
                            </Viewport3D.Camera>

                            <ModelVisual3D>
                                <ModelVisual3D.Content>
                                    <Model3DGroup>
                                        <AmbientLight Color="#888888"/>
                                        <DirectionalLight Color="#DDDDDD" Direction="-1,-1,-1.5"/>
                                        <DirectionalLight Color="#555555" Direction="1,0.5,1"/>
                                    </Model3DGroup>
                                </ModelVisual3D.Content>
                            </ModelVisual3D>

                            <ModelVisual3D Content="{Binding PreviewModel}"/>
                        </Viewport3D>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>