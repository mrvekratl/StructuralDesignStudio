<UserControl x:Class="StructuralDesignStudio.UI.Views.MaterialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             Background="#252526">

    <Grid Margin="30,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🔧 Materials"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="#F1F1F1"/>
            <TextBlock Text="Manage material properties and distribution"
                       FontSize="13"
                       Foreground="#999999"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SOL: MATERIAL LIST -->
            <Border Grid.Column="0"
                    Background="#2D2D30"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#1E1E1E"
                            BorderBrush="#3F3F46"
                            BorderThickness="0,0,0,1"
                            Padding="15,12">
                        <TextBlock Text="MATERIAL LIBRARY"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#888888"/>
                    </Border>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Materials}"
                              SelectedItem="{Binding SelectedMaterial}"
                              AutoGenerateColumns="False"
                              Background="#2D2D30"
                              Foreground="#F1F1F1"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#3F3F46"
                              RowBackground="#2D2D30"
                              AlternatingRowBackground="#252526"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#007ACC"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Material Name" Binding="{Binding MaterialName}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding MaterialType}" Width="100"/>
                            <DataGridTextColumn Header="Density" Binding="{Binding Density, StringFormat={}{0:F0}}" Width="80"/>
                            <DataGridTextColumn Header="CS (MPa)" Binding="{Binding CompressiveStrength, StringFormat={}{0:F1}}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- SAĞ: CHART & PROPERTIES -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- MATERIAL USAGE CHART -->
                <GroupBox Grid.Row="0"
                          Header="MATERIAL USAGE DISTRIBUTION"
                          Style="{StaticResource ModernGroupBox}"
                          Margin="0,0,0,15">
                    <oxy:PlotView Height="300"
                                  Model="{Binding MaterialUsageChart}"
                                  Background="Transparent"/>
                </GroupBox>

                <!-- PROPERTIES PANEL -->
                <Border Grid.Row="1"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="PROPERTIES"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#888888"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name"
                                       Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,15,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding MaterialName}"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Material Type"
                                       Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,15,10"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      ItemsSource="{Binding MaterialTypes}"
                                      SelectedItem="{Binding MaterialType}"
                                      Background="#3F3F46"
                                      Foreground="#F1F1F1"
                                      BorderBrush="#555555"
                                      BorderThickness="1"
                                      Padding="8,6"
                                      Margin="0,0,0,10">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="#3F3F46"/>
                                        <Setter Property="Foreground" Value="#F1F1F1"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007ACC"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#007ACC"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Density (kg/m³)"
                                       Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,15,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Text="{Binding Density}"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="CS (MPa)"
                                       Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1"
                                     Text="{Binding CompressiveStrength}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </Grid>

                        <UniformGrid Columns="3" Margin="0,20,0,0">
                            <Button Content="Add"
                                    Command="{Binding AddMaterialCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Margin="0,0,5,0"/>
                            <Button Content="Update"
                                    Command="{Binding UpdateMaterialCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Margin="2.5,0"/>
                            <Button Content="Delete"
                                    Command="{Binding DeleteMaterialCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Margin="5,0,0,0"
                                    Background="#C42B1C"/>
                        </UniformGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>